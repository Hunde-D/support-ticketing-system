{
  "name": "backend",
  "version": "0.1.0",
  "private": true,
  "tsup": {
    "entry": [
      "api/index.ts"
    ],
    "sourcemap": true,
    "clean": true,
    "format": [
      "esm",
      "cjs"
    ],
    "shims": true,
    "outDir": "dist",
    "preserveModules": true
  },
  "scripts": {
    "build": "tsup-node",
    "start": "node dist/index.js",
    "dev": "tsup-node --watch --onSuccess \"node dist/index.js\"",
    "check-types": "tsc --noEmit",
    "lint": "eslint api/ --max-warnings 0"
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "debug": "~2.6.9",
    "dotenv": "^16.4.7",
    "express": "~4.21.2",
    "http-errors": "~1.6.3",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.14.0",
    "mongoose": "^8.11.0",
    "morgan": "~1.9.1"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.17",
    "@types/debug": "^4.1.8",
    "@types/express": "^4.17.17",
    "@types/http-errors": "^2.0.1",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/morgan": "^1.9.4",
    "@types/node": "^22",
    "ts-node-dev": "^2.0.0",
    "tsup": "^8.3.6",
    "typescript": "5.7.3"
  }
}
